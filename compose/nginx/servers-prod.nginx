# Finding Alberta
# ===============
# Redirect to HTTPS for the client side server
server {
    listen 80;
    listen [::]:80;
    server_name alberta.livingarchives.org;

    location ~ /.well-known {
        root /opt/node;
        allow all;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# Finding Alberta
# ===============
# Serves the client side server for Finding Alberta
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    charset utf-8;
    
    server_name alberta.livingarchives.org;

    ssl_certificate /etc/letsencrypt/live/livingarchives.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/livingarchives.org/privkey.pem;

    include ssl-params.nginx;

    location ~ /.well-known {
        root /opt/node;
        allow all;
    }

    location /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static {
        alias /opt/node/static;
    }

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://node:3000;
    }
}

